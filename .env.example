# ===========================================
# AG-SERVICE ENVIRONMENT CONFIGURATION
# ===========================================

# Server
NODE_ENV=development
PORT=3005
API_VERSION=v1

# MongoDB Connection
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=plantgen_ag

# MongoDB URI (alternativa a los campos individuales)
# MONGO_URI=mongodb://admin:password123@localhost:27017/plantgen_ag?authSource=admin

# Microservices Communication
USERS_SERVICE_URL=http://localhost:3001
NOTIFICATIONS_SERVICE_URL=http://localhost:3003

# Genetic Algorithm Parameters (opcional, tiene defaults)
AG_POPULATION_SIZE=40
AG_MAX_GENERATIONS=150
AG_CROSSOVER_PROBABILITY=0.85
AG_MUTATION_RATE=0.08
AG_TOURNAMENT_K=3
AG_INSERTION_RATE=0.1
AG_DELETION_RATE=0.05
AG_ELITE_COUNT=3
AG_PATIENCE=20
AG_CONVERGENCE_THRESHOLD=0.001


MAX_PLANT_SPECIES_DEFAULT=5 

# Timeouts
AG_EXECUTION_TIMEOUT_MS=30000
EXTERNAL_SERVICE_TIMEOUT_MS=5000

# Logging
LOG_LEVEL=debug

# Location defaults (Chiapas, MÃ©xico)
DEFAULT_LATITUDE=16.75
DEFAULT_LONGITUDE=-93.11
